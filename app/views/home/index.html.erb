<div class="col-md-12">
  <div class="tab-content">
    <div role="tabpanel" class="tab-pane active" id="conseiller">
      <h1>Photovisualizer</h1>
      <div class="col-md-9">
        <p>Some text</p>
      </div>
      <div class="col-md-3 sign-in-block">
        <div class="row">
          <p><b>Sign in</b></p>
          <%= form_tag sessions_path, html: {class: 'form-horizontal'} do %>
            <div class="field form-group">
              <%= text_field_tag :email, nil, placeholder: "email", class: 'form-control' %>
            </div>
            <div class="field form-group">
              <%= password_field_tag :password, nil, placeholder: "password", class: 'form-control' %>
            </div>
            <div class="actions form-group">
              <%= submit_tag "Connexion", class: "btn btn-success" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
    <div role="tabpanel" class="tab-pane" id="tab2">
      <h1>Title2</h1>
    </div>
  </div>
</div>