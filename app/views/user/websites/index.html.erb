<div class="page-header">
  <h1>Websites</h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th> Name </th>
      <th> URL </th>
      <th> Number of images </th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @websites.each do |website| %>
      <tr>
        <td><%= link_to website.name, post_path(id: website.latest_post.id) if website.latest_post %></td>
        <td><%= link_to website.url, post_path(id: website.latest_post.id) if website.latest_post %></td>
        <td><%= website.images.count %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<div>
  <%= link_to "Manage websites", websites_path %>
</div>